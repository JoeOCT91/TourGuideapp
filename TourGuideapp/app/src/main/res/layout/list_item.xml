<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/location-image"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pyramids_of_giza"
        tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location-tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="The Great Pyramid of Giza"
            android:textColor="@color/Black"
            android:layout_marginTop="8dp"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location-information"
            tools:text="The Great Pyramid of Giza is the oldest and largest of the three pyramids in the Giza pyramid complex bordering present-day El Giza, Egypt. "
            android:textColor="@color/Black"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_head"/>
        <TextView
            android:id="@+id/location_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Al Haram, Nazlet El-Semman, Al Giza Desert, Giza Governorate"
        />

    </LinearLayout>

</LinearLayout>